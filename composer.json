{
  "name": "maccath/rebate-calculator",
  "type": "project",
  "description": "A cashback calculator for a pre-paid card service.",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "twig/twig": "~3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4",
    "squizlabs/php_codesniffer": "3.*",
    "slevomat/coding-standard": "^8.14"
  },
  "autoload": {
    "psr-4": {
      "RebateCalculator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RebateCalculator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
